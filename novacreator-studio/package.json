{
  "name": "novacreator-studio",
  "version": "1.0.0",
  "description": "NovaCreator Studio - Digital агентство",
  "scripts": {
    "build-css": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --minify",
    "build-js-prod": "terser ./assets/js/main.js -o ./assets/js/main.min.js --compress --mangle"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "terser": "^5.36.0"
  }
}

