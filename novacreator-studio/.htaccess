# Включаем mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # HTTPS РЕДИРЕКТ (должен быть первым, чтобы все было через HTTPS)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Убираем www (после HTTPS редиректа)
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteCond %{HTTPS} on
    RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [R=301,L]
    
    # ЧПУ - убираем .php расширение
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.php -f
    RewriteCond %{REQUEST_URI} ^(.+)\.php$
    RewriteRule ^(.+)\.php$ /$1 [R=301,L]
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^\.]+)$ $1.php [L]
    
    # Мультиязычность
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(ru|en)/(.*)$ /$2?lang=$1 [QSA,L]
</IfModule>

# КЕШИРОВАНИЕ БРАУЗЕРА - Улучшенное
<IfModule mod_expires.c>
    ExpiresActive On
    # Изображения
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    # CSS и JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    # Шрифты
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    # Другие файлы
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType application/xml "access plus 0 seconds"
    ExpiresByType text/xml "access plus 0 seconds"
    ExpiresByType application/rss+xml "access plus 1 hour"
    ExpiresByType application/atom+xml "access plus 1 hour"
    ExpiresDefault "access plus 1 month"
</IfModule>

# СЖАТИЕ GZIP - Улучшенное
<IfModule mod_deflate.c>
    # HTML
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    # CSS и JavaScript
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    # JSON и XML
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE text/xml
    # RSS и Atom
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    # SVG
    AddOutputFilterByType DEFLATE image/svg+xml
    # Исключаем уже сжатые файлы
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp|zip|gz|bz2|rar)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \.(?:mp3|mp4|avi|mov|wmv|flv|swf)$ no-gzip dont-vary
</IfModule>

# БЕЗОПАСНОСТЬ И ПРОИЗВОДИТЕЛЬНОСТЬ
<IfModule mod_headers.c>
    # Безопасность
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Производительность - кеширование
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|eot|css|js)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Preload для критических ресурсов
    <FilesMatch "\.(css|js)$">
        Header add Link "</assets/css/output.css>; rel=preload; as=style"
        Header add Link "</assets/js/main.min.js>; rel=preload; as=script"
    </FilesMatch>
</IfModule>

# ЗАЩИТА ФАЙЛОВ
<FilesMatch "\.(env|config\.php|gitignore|htaccess|db|sqlite)$">
    Order allow,deny
    Deny from all
</FilesMatch>
# Разрешаем manifest.json и другие публичные JSON файлы
<FilesMatch "^(manifest|package|composer)\.json$">
    Order allow,deny
    Allow from all
</FilesMatch>

# MIME ТИПЫ
<IfModule mod_mime.c>
    AddType application/javascript js
    AddType application/json json
    AddType image/webp webp
    AddType image/svg+xml svg
    AddType image/x-icon ico
    AddDefaultCharset utf-8
</IfModule>

# CUSTOM ERROR PAGES
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php

# ОТКЛЮЧАЕМ DIRECTORY LISTING
Options -Indexes

